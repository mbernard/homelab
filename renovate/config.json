{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": ["renovate"],
  "repositories": ["mbernard/homelab"],
  "packageRules": [
    {
      "matchManagers": [
        "argocd"
      ],
      "matchPaths": [
        "**/**"
      ]
    }   
  ],
  "argocd": {
    "fileMatch": ["\\.yaml$"]
  }
}